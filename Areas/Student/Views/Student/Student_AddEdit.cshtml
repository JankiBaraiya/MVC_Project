@model MVC_Project.Areas.Student.Models.StudentModel

@{
    Layout = "~/Views/shared/_Layout.cshtml";
}
<main class="main" id="main">

    <div class="d-flex flex-column">

        <form method="post" asp-area="Student" asp-controller="Student" asp-action="Save">
            @Html.HiddenFor(x => x.StudentID)
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mt-3 mb-3">
                <h2>Student Add / Update Page</h2>
            </div>
            <div class="mb-3 row form-group">
                <label class="col-sm-2 col-form-label">Student Name</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="StudentName" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Mobile No Student</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="MobileNoStudent" />
                    <span asp-validation-for="MobileNoStudent" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Mobile No Father</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="MobileNoFather" />
                    <span asp-validation-for="MobileNoFather" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Address</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label  class="col-sm-2 col-form-label">BirthDate</label>
                <div class="col-xl-4">
                    <input type="date" class="form-control" asp-for="BirthDate">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Age</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="form-label col-sm-2 col-form-label">City</label>
                <div class="col-xl-4">
                    <select id="inputCity" class="form-control" asp-for="CityID"
                            asp-items="@(new SelectList(ViewBag.CityList,"CityID","CityName"))">

                        <option disabled selected>Select City</option>
                    </select>
                    <span asp-validation-for="CityID" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label  class="form-label col-sm-2 col-form-label">Branch</label>
                <div class="col-xl-4">
                    <select id="inputBranch" class="form-control" asp-for="BranchID"
                            asp-items="@(new SelectList(ViewBag.Branch,"BranchID","BranchName"))">

                        <option disabled selected>Select Branch</option>
                    </select>
                    <span asp-validation-for="BranchID" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">IsActive</label>
                <div class="col-xl-4">
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked asp-for="IsActive">
                            <label class="form-check-label" for="gridRadios1">
                                True
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2" asp-for="IsActive">
                            <label class="form-check-label" for="gridRadios2">
                                False
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                </div>
            
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Gender</label>
                <div class="col-xl-4">
            <input type="text" class="form-control" asp-for="Gender" placeholder="Gender">
            <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label  class="col-sm-2 col-form-label">Password</label>
                <div class="col-xl-4">
            <input type="text" class="form-control" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>


            <div>
                <button class="btn btn-success" type="submit" >Add</button>
                <a class="btn btn-primary" asp-area="Student" asp-controller="Student" asp-action="StudentList">Back</a>
            </div>
        </form>


    </div>
</main>









@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
